<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/gojek_gray"
    android:padding="10.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/mLLInstantCourier"
        android:background="@drawable/card_selector"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <ImageView
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/ic_courier" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0">

            <TextView
                android:textSize="@dimen/bebas_pick_service"
                android:textColor="@color/gojek_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instant_courier_u"
                app:fontFamily="bebas"
                app:fontStyle="bold" />

            <TextView android:textSize="@dimen/default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instant_courier_desc"
                app:fontFamily="lato" />
        </LinearLayout>

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/ic_arrow" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/mLLTransport"
        android:background="@drawable/card_selector"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_weight="1.0">

        <ImageView
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/ic_transport" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:layout_weight="1.0">

            <TextView
                android:textSize="@dimen/bebas_pick_service"
                android:textColor="@color/gojek_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transport_u"
                app:fontFamily="bebas"
                app:fontStyle="bold" />

            <TextView
                android:textSize="@dimen/default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transport_desc"
                app:fontFamily="lato" />
        </LinearLayout>

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:src="@drawable/ic_arrow" />
    </LinearLayout>
</LinearLayout>
